@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Style="background-color: transparent; border-bottom: 1px solid rgba(255,255,255,0.1); backdrop-filter: blur(10px);">
        <MudContainer MaxWidth="MaxWidth.Medium" Class="d-flex align-center">
            <MudText Typo="Typo.h6" Class="mr-4">
                <MudLink Href="/" Underline="Underline.None" Color="Color.Inherit">sametcc.me</MudLink>
            </MudText>
            <MudSpacer />
            <MudLink Href="/" Color="Color.Inherit" Class="mx-2" Underline="Underline.Hover">Home</MudLink>
             <!-- Add more links if needed -->
            <MudIconButton Icon="@Icons.Material.Filled.Brightness4" Color="Color.Inherit" OnClick="@((e) => _isDarkMode = !_isDarkMode)" />
        </MudContainer>
    </MudAppBar>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="mt-8 px-4">
            @Body
        </MudContainer>
        
        <MudContainer MaxWidth="MaxWidth.Medium" Class="mt-16 mb-8">
            <MudDivider Class="mb-4" />
            <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Secondary">
                &copy; @DateTime.Now.Year Samet Can Cıncık.
            </MudText>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _isDarkMode = true;
    private MudTheme _theme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#3b82f6",
            AppbarBackground = "#ffffff",
            Background = "#f5f5f5",
            TextPrimary = "#111111"
        },
        PaletteDark = new PaletteDark()
        {
            Primary = "#3b82f6",
            AppbarBackground = "#000000",
            Background = "#000000",
            Surface = "#111111",
            TextPrimary = "#e5e5e5",
            TextSecondary = "#a3a3a3",
            Divider = "#222222"
        }
    };
}

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
