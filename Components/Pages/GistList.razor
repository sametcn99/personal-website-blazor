@page "/gist"
@rendermode InteractiveServer
@inject personal_website_blazor.Core.Application.Abstractions.IContentService ContentService

<PageTitle>Gists | Samet Can Cıncık</PageTitle>

@if (_posts == null)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
}
else
{
    <ContentListPage Title="Gists"
                     Description="Quick notes and useful scripts."
                     Posts="_posts"
                     UrlPrefix="gist" />
}

@code {
    private List<PostModel>? _posts;

    protected override async Task OnInitializedAsync()
    {
        _posts = await ContentService.GetPostsAsync("gists");
    }
}
