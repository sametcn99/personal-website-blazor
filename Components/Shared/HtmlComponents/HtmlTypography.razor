@using MudBlazor
<MudText Typo="@Typo" GutterBottom="true" Class="@GetClass()"  Style="@GetStyle()">
    @ChildContent
</MudText>

@code {
    [Parameter] public Typo Typo { get; set; } = Typo.body1;
    [Parameter] public RenderFragment? ChildContent { get; set; }

    private string GetClass()
    {
        return Typo switch
        {
            Typo.h4 => "mb-6 mt-12 font-bold",
            Typo.h5 => "mb-4 mt-10 font-bold pb-2",
            Typo.h6 => "mb-3 mt-8 font-bold",
            Typo.body1 => "mb-4 text-justify",
            _ => "mb-2"
        };
    }


    private string GetStyle()
    {
        return Typo switch
        {
            Typo.h5 => "border-bottom: 1px solid;",
            Typo.body1 => "line-height: 1.8;",
            _ => ""
        };
    }
}
